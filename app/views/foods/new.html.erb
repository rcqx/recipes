<h3>Add Food:</h3>
<%= form_with url: foods_path, method: :post, local: true, scope: :add_food do |form| %>

    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :measurement_unit %><br>
      <%= form.decimal_field :quantity, size: "80x6" %>
    </div>
  
    <div>
      <%= form.label :price %><br>
      <%= form.number_field :price, size: "80x6" %>
    </div>

    <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity, size: "80x6" %>
    </div>
  
    <%= form.submit 'Save Food' %>
  <% end %>
  